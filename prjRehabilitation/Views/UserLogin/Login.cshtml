
@{
    ViewData["Title"] = "Index";
}

<h1>登入系統</h1>
<form asp-action="Login">
    <!-- Email input -->
    <div class="form-group mb-4">
        <label class="form-label" for="form2Example1">Email address</label>
        <input type="email" id="txtAccount" class="form-control" placeholder="Enter email" name="txtAccount" value="a"/>
        <div id="div1">帳號錯誤</div>
    </div>

    <!-- Password input -->
    <div class="form-outline mb-4">
        <label class="form-label" for="form2Example2">Password</label>
        <input type="password" id="txtPassword" class="form-control" placeholder="Enter Password" name="txtPassword" />
    <div id="div2">密碼錯誤</div>
</div>
    <!-- 2 column grid layout for inline styling -->
    <div class="row mb-4">
        <div class="col d-flex justify-content-center">
            <!-- Checkbox -->
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="form2Example31" checked />
                <label class="form-check-label" for="form2Example31"> Remember me </label>
            </div>
        </div>

        <div class="col">
            <!-- Simple link -->
            <a href="#!">Forgot password?</a>
        </div>
    </div>

    <!-- Submit button -->
    <input type="submit" class="btn btn-primary btn-block mb-4" id="logbtn" value="登入"></input>

    <!-- Register buttons -->
    <div class="text-center">
        <a asp-action="Register">點我註冊</a>
        <p>or sign up with:</p>
        <button type="button" class="btn btn-link btn-floating mx-1">
            <i class="fab fa-facebook-f"></i>
        </button>

        <button type="button" class="btn btn-link btn-floating mx-1">
            <i class="fab fa-google"></i>
        </button>

        <button type="button" class="btn btn-link btn-floating mx-1">
            <i class="fab fa-twitter"></i>
        </button>

        <button type="button" class="btn btn-link btn-floating mx-1">
            <i class="fab fa-github"></i>
        </button>
    </div>
</form>
