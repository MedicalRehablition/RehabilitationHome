@model IEnumerable<prjRehabilitation.ViewModel.CProductViewModel>

@{
    ViewData["Title"] = "List";
    Layout = "_Layout";
}
<style>
    a {
        color: darkorange;
        /*font-family: 標楷體;*/
        /*font-size: 30px;*/
        text-decoration: none;
    }

    h5 {
        color: red;
        font-family: 標楷體;
    }

    .g-font-size-16 {
        font-size: 1.14286rem;
    }

    .g-color-primary {
        color: brown;
        font-size: 30px;
    }

    .g-bg-white {
        background-color: aqua;
    }

    .g-color-black {
        color: #000;
    }
</style>
<h1>List</h1>

<p>
    <a asp-action="Create">新增商品</a>
</p>

<div class="container">
    <div class="row">
        @{
            int count = 0;
            foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4 g-mb-30" style="padding:20px;">
                    <article class="u-shadow-v18 g-bg-white text-center rounded g-px-20 g-py-40 g-mb-5">
                        <img src="~/images/@item.FPhoto" width="300px" height="300px" />
                        <span class="d-block g-color-primary g-font-size-16">$@Html.DisplayFor(modelItem => item.FPrice)</span>
                        <!-- 只有上部圓角 -->
                        <div class="card-body">
                            <h4 class="h5 g-color-black g-font-weight-600 g-mb-10">@Html.DisplayFor(modelItem => item.FName)</h4>
                            @Html.ActionLink("編輯商品", "Edit", new {  id=item.Fid })
                            @Html.ActionLink("刪除商品", "Delete", new {  id=item.Fid },new { @onclick = "return confirm('是否刪除?')"})
                        </div>
                    </article>
                </div>
            }
        }
    </div>
</div>

