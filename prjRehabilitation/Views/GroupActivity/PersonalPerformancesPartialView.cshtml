@model prjRehabilitation.ViewModel.Eric.CPersonalPerformancesPartialViewViewModel

@{
  

}


@for (int i = 0; i < Model.tpp.Length; i++)
{
    string name = Model.ResidentName.FirstOrDefault(_ => _.Split(",")[0] == Model.tpp[i].FResidentId.ToString()).Split(",")[1];

    <div class="card">
        <div class="card-body">
            <div class="row">@name</div>
            <div class="row">
                <div class="col">@Model.tpp[i].FEmotions</div>
                <div class="col">@Model.tpp[i].FParticipatePersistence</div>
                <div class="col">@Model.tpp[i].FCooperate</div>
            </div>
            <div class="row">
                <div class="col">@Model.tpp[i].FHumanInteraction</div>
                <div class="col">@Model.tpp[i].FAttention</div>
                <div class="col">@Model.tpp[i].FParticipatePerformance</div>
            </div>
            <div class="row"><input type="text" asp-for="@Model.tpp[i].FDepiction"/></div>
        </div>
    </div>
}
